@model IList<TheLiquorCabinet.Models.Drink>

@{
    ViewData["Title"] = "Drink Results";
}
<div class="text-center">
    <img src="~/css/Images/DrinkResults.png" />
</div>
<br />
<h3>Number of results found: @Model.Count</h3>
<br />
@if (ViewBag.IngredientNames != null)
{
<h4>
    Filtering results using the following ingredients: @ViewBag.IngredientNames
</h4>
<br />
}
<div class="text-center">
    @foreach (var item in Model)
    {
        <hr />
        <div class="row">
            <div class="col-md-4">
                <img src=@Html.DisplayFor(modelItem => item.PictureLink) height="100" width="100">
            </div>
            <div class="col-md-4">
                <h5>
                    @Html.DisplayFor(modelItem => item.Name)
                </h5>
            </div>
            <div class="col-md-4">
                <a class="btn btn-primary" asp-action="GetDrink" asp-controller="Drink" asp-route-id="@item.ID">Details</a>
            </div>
        </div>
    }
</div>