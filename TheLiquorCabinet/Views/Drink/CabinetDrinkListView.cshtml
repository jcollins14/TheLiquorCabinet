@model TheLiquorCabinet.Models.CabinetSearchViewModel

@{
    ViewData["Title"] = "DrinkListView";
}

<h3>Results found: @Model.CanMake.Count</h3>
<h2>Results missing one ingredient: @Model.MissingOne.Count</h2>
<br />
<div class="text-center">
    @foreach (var item in Model.CanMake)
    {
        <hr />
        <div class="row">
            <div class="col-md-4">
                <img src=@Html.DisplayFor(modelItem => item.PictureLink) height="100" width="100">
            </div>
            <div class="col-md-4">
                <h5>
                    @Html.DisplayFor(modelItem => item.Name)
                </h5>
            </div>
            <div class="col-md-4">
                <a class="btn btn-primary" asp-action="GetDrink" asp-controller="Drink" asp-route-id="@item.ID">Details</a>
            </div>
        </div>

    }
</div>
<h2>You're one ingredient away from making the following drinks</h2>
<div class="text-center">
    @foreach (var item in Model.MissingOne)
    {
        <hr />
        <div class="row">
            <div class="col-md-4">
                <img src=@Html.DisplayFor(modelItem => item.PictureLink) height="100" width="100">
            </div>
            <div class="col-md-4">
                <h5>
                    @Html.DisplayFor(modelItem => item.Name)
                </h5>
            </div>
            <div class="col-md-4">
                <a class="btn btn-primary" asp-action="GetDrink" asp-controller="Drink" asp-route-id="@item.ID">Details</a>
            </div>
        </div>

    }
</div>