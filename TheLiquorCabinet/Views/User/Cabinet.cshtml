@if (@*(UserID != null*@true) { 
    <div class="text-center">
        <h2>Usernames's Cabinet</h2>
        <br />
        <div class="row">
            <div class="col-md-6">


                <img src="~/css/Images/CabinetIngredient.jpg" height="400" width="500" />

            </div>
            <div class="col-md-6">
                <h5>Ingredients Currently in Your Cabinet:</h5>
                
                @foreach (var ingredient in Model.CabinetList)
                {
                    <option value="@ingredient.Name">@ingredient.Name</option>
                }
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form id="isearch" asp-controller="Drink" asp-action="DrinksByCabinet">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <label name="DrinkId" class="control-label">Search all drinks you can make with ingredients on hand: </label>
                    <select class="js-example-basic-multiple" name="ingredients" multiple="multiple" required="required">
                        @foreach (var ingredient in Model.CabinetList)
                        {
                            <option value="@ingredient.Name">@ingredient.Name</option>
                        }
                    </select>

                    <input asp-controller="Drink" asp-action="DrinksByCabinet"
                           asp-route-ingredients="ingredients"
                           type="submit" value="Submit" class="btn btn-primary" />
                </form>
            </div>
            <div class="col-md-4">
                <p>Add ingredients to your cabinet</p>
            </div>
        </div>
    </div>
}