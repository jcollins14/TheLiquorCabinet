@model TheLiquorCabinet.Models.CabinetViewModel


@if (Model.UserId == 0)

{
    <div class="text-center">
            <h2>The Ingredient Cabinet is Currently Empty</h2>
            <p>
                <img src="~/css/Images/Empty Fridge.jpg" height="350" width="300" />
            </p>
            <br />
            <h6><a asp-action="Register" asp-controller="User">Create</a> an account and start adding ingredients! </h6>
            <div class="row">
                <div class="col-md-4">


                </div>
            </div>

    </div>



}

@if (@Model.UserId > 0)
{
<div class="card-body">
    <h2>These ingredients are currently in your cabinet</h2>
    <div class="megalist" id="myList">
        <ul>
            @foreach (var item in Model.CabinetList)
            {
                <li>
                    <p>@item.Name
                    <a class="btn btn-danger" style="float: right" asp-controller="Ingredient" 
                       asp-action="RemoveOneIngredient" asp-route-ingred="@item.Name">Remove</a>
                    </p>
                </li>
            }
        </ul>
    </div>
</div>

    <div class="row">
        <div class="col-md-6">
            <form id="isearch" asp-controller="Drink" asp-action="DrinksByCabinet">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <label name="DrinkId" class="control-label">Search all drinks you can make with ingredients on hand: </label>
                <select class="js-example-basic-multiple" name="ingredients" multiple="multiple" required="required">
                    @foreach (var ingredient in Model.AllIngredients)
                    {
                        <option value="@ingredient">@ingredient</option>
                    }
                </select>

                <div class="form-group">

                    <input asp-controller="Drink" asp-action="DrinksByCabinet"
                           asp-route-ingredients="ingredients"
                           type="submit" value="Submit" class="btn btn-primary" />
                </div>
            </form>

        </div>
        <div class="col-md-4">
            <p>Add ingredients to your cabinet</p>
        </div>
    </div>
    <h3>See all the drinks you can make!</h3>
    <div>
         @using (@Html.BeginForm("DrinksByCabinet", "Drink"))
         {
            <input class="btn btn-primary" type="submit"/>
        }
    </div>

}
<script>
        $(document).ready(function () {
        $('#myList').megalist();
        $('#myList').on('change', function (event) {
            var message = "selected index: " + event.selectedIndex + "\n" +
                "selected item: " + event.srcElement.get()[0].outerHTML;
            alert(message);
        })
    });
</script>

