@model TheLiquorCabinet.Models.IngredientList
@{
    ViewData["Title"] = "SearchByIngredient";
}

<h1>Search By Ingredient</h1>
<h2>Select Ingredients from the List Below:</h2>

<form>

    @for (int i = 0; i < Model.IngredientNames.Count(); i++)
    {

      <input type="checkbox" id="ingredient" name="ingredient" value="ingredient" >
      <label for="ingredient">@Model.IngredientNames[i] </label>

    }

    <input type="submit" value="Submit">
</form>
    

   